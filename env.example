# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/esl-coaching

# OpenAI API (for Whisper transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (for analysis)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# AWS S3 (optional - for video storage)
# If not provided, videos will be stored locally in public/uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name

# NextAuth Secret (for JWT tokens)
# Generate a random string: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
